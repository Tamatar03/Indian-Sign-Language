// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum Handedness {
  LEFT
  RIGHT
}

enum CourseLevel {
  BEGINNER
  DAILY
  EMERGENCY
}

// Models

model User {
  id                 Int      @id @default(autoincrement())
  createdAt          DateTime @default(now()) @map("created_at")
  handedness         Handedness @default(RIGHT)
  dailyGoalMinutes   Int      @default(10) @map("daily_goal_minutes")

  // Relations
  progress      Progress[]
  quizAttempts  QuizAttempt[]

  @@map("users")
}

model Course {
  id          Int         @id @default(autoincrement())
  title       String
  level       CourseLevel

  // Relations
  lessons     Lesson[]

  @@map("courses")
}

model Lesson {
  id          Int      @id @default(autoincrement())
  courseId    Int      @map("course_id")
  title       String
  order       Int

  // Relations
  course      Course   @relation(fields: [courseId], references: [id])
  progress    Progress[]

  @@map("lessons")
}

model Sign {
  id            Int      @id @default(autoincrement())
  word          String   @unique
  videoUrl      String   @map("video_url")
  dominantHand  Handedness @map("dominant_hand")
  duration      Int      // in seconds or milliseconds, user didn't specify unit but likely seconds

  @@map("signs")
}

model SupportedSentence {
  id            Int      @id @default(autoincrement())
  gloss         String
  wordSequence  String   @map("word_sequence") // JSON string or comma separated? Storing as string for now based on prompt

  @@map("supported_sentences")
}

model Progress {
  // Composite ID or unique constraint might be needed, but sticking to simple relation here
  // Ideally (userId, lessonId) should be unique
  userId        Int      @map("user_id")
  lessonId      Int      @map("lesson_id")
  completedAt   DateTime @default(now()) @map("completed_at")
  score         Int

  // Relations
  user          User     @relation(fields: [userId], references: [id])
  lesson        Lesson   @relation(fields: [lessonId], references: [id])

  @@id([userId, lessonId])
  @@map("progress")
}

model QuizAttempt {
  id          Int      @id @default(autoincrement())
  userId      Int      @map("user_id")
  quizId      Int      @map("quiz_id") // ID of the quiz, assuming quizzes might be separate or part of lessons. schema didn't specify quiz table, so just ID here.
  score       Int
  createdAt   DateTime @default(now()) @map("created_at")

  // Relations
  user        User     @relation(fields: [userId], references: [id])

  @@map("quiz_attempts")
}
